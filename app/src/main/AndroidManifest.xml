<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.an0rakdev.planetaryconquest">

    <!-- Use the software VR -->
    <uses-feature
        android:name="android.software.vr.mode"
        android:required="false" />
    <!-- Enable High performance for VR -->
    <uses-feature
        android:name="android.hardware.vr.high_performance"
        android:required="false" />
    <!-- Permission to External Storage are required in order to use the distortion  --> <!-- TODO(an0rak) : WHY ? -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.google.intent.category.CARDBOARD" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Flying"
            android:parentActivityName=".activities.Main"
            android:screenOrientation="landscape"> <!-- Landscape required in VR -->
        </activity>
        <activity
            android:name=".activities.Asteroids"
            android:parentActivityName=".activities.Main"
            android:screenOrientation="landscape"> <!-- Landscape required in VR -->
        </activity>
    </application>
</manifest>